<%= form_for(@user, html: {class: "form-container"}) do |form| %>
<%= render 'shared/errors' %>
<h1>Login Page</h1>
<div class="form-group">
  <%= form.label :username %>
  <%= form.search_field :username, class: 'form-control', placeholder: "Username" %>
</div>
<div class="form-group">
  <%= form.label :password %>
  <%= form.password_field :password, class: 'form-control', placeholder: "Password" %>
</div>
<div class="form-group">
  <%= form.label :password_confirmation %>
  <%= form.password_field :password, class: 'form-control', placeholder: "Password confirmation" %>
</div>

<%= form.submit "Create admin account", class: "btn btn-success btn-block" %>
<% end %>
