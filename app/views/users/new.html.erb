<%= javascript_include_tag 'custom/register' %>
<div class="container-fluid bg"/>
<%= form_for(@user, url: new_admin_path, html: {class: "form-signin"}) do |form| %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <h3 class="text-center">
            Registration</h3>
            <form class="form form-signup" role="form">
              <%= render 'shared/errors' %>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                  <%= form.text_field :first_name, class: 'form-control', placeholder: "First Name" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                  <%= form.text_field :second_name, class: 'form-control', placeholder: "Last Name" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                  <%= form.text_field :username, class: 'form-control', placeholder: "Username" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                  <%= form.password_field :password, class: 'form-control', placeholder: "Password" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                  <%= form.password_field :password, class: 'form-control', placeholder: "Password confirmation" %>
                </div>
              </div>
            </div>
            <%= form.submit "Create admin account", class: "btn btn-sm btn-primary btn-block" %>
          </form>
        </div>
      </div>
      <% end %>
      <div class="col-md-4">
        <div class="aro-pswd_info">
          <div id="pswd_info">
            <h4>Password must be requirements</h4>
            <ul>
              <li id="letter" class="invalid">At least <strong>one letter</strong></li>
              <li id="capital" class="invalid">At least <strong>one capital letter</strong></li>
              <li id="number" class="invalid">At least <strong>one number</strong></li>
              <li id="length" class="invalid">Be at least <strong>8 characters</strong></li>
              <li id="space" class="invalid">At least one<strong>[~,!,@,#,$,%,^,&,*,-,=,.,;,']</strong></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
