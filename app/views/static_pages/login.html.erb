    <div class="col-md-4 col-sm-4 col-xs-12"></div>
    <div class="col-md-4 col-sm-4 col-xs-12">

      <!--form start -->
      <%= form_for(:session, url: login_path, html: {class: "form-container"}) do |form| %>
      <h1>Login Page</h1>
      <div class="form-group">
        <%= form.label :username %>
        <%= form.search_field :username, class: 'form-control', placeholder: "Username" %>
      </div>
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control', placeholder: "Password" %>
      </div>
      <div class="checkbox">
        <%= form.label :remember_me, class: "checkbox inline" do %>
        <%= form.check_box :remember_me %>
        <span>Remember me on this computer</span>
        <% end %>
      </div>
      <%= form.submit "Login", class: "btn btn-success btn-block" %>
      <% end %>
